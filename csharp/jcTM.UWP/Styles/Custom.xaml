<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Template10.Controls">
    <Style TargetType="controls:HamburgerMenu" x:Key="MainBurger">
        <Setter Property="NavAreaBackground" Value="Black" />
        <Setter Property="NavButtonForeground" Value="White" />
        <Setter Property="HamburgerBackground" Value="#015077" />
        <Setter Property="HamburgerForeground" Value="White" />
        <Setter Property="Background" Value="#015077" />
    </Style>

    <Style TargetType="Page">
        <Setter Property="Background" Value="#015077" />
    </Style>
    
    <Style TargetType="Grid" x:Key="MainContainer">
        <Setter Property="Background" Value="#015077" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>